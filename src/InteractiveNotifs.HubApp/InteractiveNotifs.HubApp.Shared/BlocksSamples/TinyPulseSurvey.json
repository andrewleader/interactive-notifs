{
  "view": {
    "content": {
      "text": [
        "How likely would you be to refer someone to work here?"
      ],
      "images": [
        {
          "url": "https://messagecardplayground.azurewebsites.net/assets/TINYPulseQuestionIcon.png",
          "hints": {
            "category": [ "icon" ]
          }
        }
      ],
      "actions": [
        {
          "type": "Action",
          "title": "Respond anonymously",
          "inputs": [
            {
              "type": "ChoiceSet",
              "id": "choice",
              "placeholder": "Select an option",
              "choices": [
                {
                  "title": "Very likely",
                  "value": "5"
                },
                {
                  "title": "Undecided",
                  "value": "3"
                },
                {
                  "title": "Very unlikely",
                  "value": "1"
                }
              ]
            },
            {
              "type": "TextInput",
              "id": "elaboration",
              "placeholder": "Feel free to elaborate"
            }
          ]
        }
      ]
    },
    "richContent": [
      {
        "targetedExperiences": [ "Microsoft.Outlook.ActionableMessage" ],
        "contentType": "application/vnd.microsoft.card.adaptive",
        "content": {
          "$schema": "https://adaptivecards.io/schemas/adaptive-card.json",
          "type": "AdaptiveCard",
          "version": "1.0",
          "style": "emphasis",
          "body": [
            {
              "type": "Container",
              "bleed": true,
              "items": [
                {
                  "type": "ColumnSet",
                  "columns": [
                    {
                      "width": "auto",
                      "verticalContentAlignment": "center",
                      "items": [
                        {
                          "type": "Image",
                          "height": "30px",
                          "url": "https://cdn2.hubspot.net/hubfs/443262/header_assets/engage_logo.png?t=1459547965461"
                        }
                      ]
                    },
                    {
                      "width": "stretch",
                      "verticalContentAlignment": "center",
                      "items": [
                        {
                          "type": "TextBlock",
                          "text": "All survey responses are anonymous. [Learn more](https://www.tinypulse.com)",
                          "horizontalAlignment": "right",
                          "wrap": true
                        }
                      ]
                    }
                  ]
                }
              ]
            },
            {
              "type": "Container",
              "style": "default",
              "items": [
                {
                  "type": "ColumnSet",
                  "horizontalAlignment": "center",
                  "columns": [
                    {
                      "width": "48px",
                      "verticalContentAlignment": "center",
                      "items": [
