                      ]
                    }
                  ]
                },
                {
                  "type": "Input.ChoiceSet",
                  "placeholder": "Select an option",
                  "id": "choiceinputid",
                  "isRequired": true,
                  "choices": [
                    {
                      "title": "1 - Extremely unlikely \"I would physically deter them down to my last breath\"",
                      "value": "1"
                    },
                    {
                      "title": "2",
                      "value": "2"
                    },
                    {
                      "title": "3",
                      "value": "3"
                    },
                    {
                      "title": "4",
                      "value": "4"
                    },
                    {
                      "title": "5",
                      "value": "5"
                    },
                    {
                      "title": "6",
                      "value": "6"
                    },
                    {
                      "title": "7",
                      "value": "7"
                    },
                    {
                      "title": "8",
                      "value": "8"
                    },
                    {
                      "title": "9",
                      "value": "9"
                    },
                    {
                      "title": "10 - Extremely likely (\"It's the best place to work\")",
                      "value": "10"
                    }
