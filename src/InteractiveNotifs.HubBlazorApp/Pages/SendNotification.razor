@page "/sendnotification"
@inject ViewModels.SendNotificationViewModel ViewModel

<h1>Send notification</h1>

<p>Current notifications: 0</p>

<textarea @bind="ViewModel.Payload"></textarea>

@if (ViewModel.IsPayloadInvalid)
{
<p class="error">Invalid payload</p>
}

@if (!ViewModel.Sending)
{
<button class="btn btn-primary" @onclick="ViewModel.SendNotif">Send notification</button>
}
else
{
<button class="btn btn-primary" disabled>Sending...</button>
}

<p>@ViewModel.Payload</p>


