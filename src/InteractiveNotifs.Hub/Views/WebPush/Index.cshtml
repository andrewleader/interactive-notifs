@model InteractiveNotifs.Hub.Models.WebPushViewModel

@{
    ViewData["Title"] = "WebPush";
}

<h2>WebPush</h2>

@if (ViewData.ContainsKey("Response"))
{
    <code>@ViewData["Response"]</code>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="WebPush" asp-action="Send" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicServerKey" class="control-label"></label>
                <input asp-for="PublicServerKey" class="form-control" />
                <span asp-validation-for="PublicServerKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrivateServerKey" class="control-label"></label>
                <input asp-for="PrivateServerKey" class="form-control" />
                <span asp-validation-for="PrivateServerKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubscriptionJson" class="control-label"></label>
                <textarea asp-for="SubscriptionJson" rows="10" class="form-control"></textarea>
                <span asp-validation-for="SubscriptionJson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
